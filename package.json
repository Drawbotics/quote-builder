{
  "name": "quote-builder",
  "version": "0.1.0",
  "description": "Desktop app to build price offers at Drawbotics",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "clean:builds": "rimraf builds",
    "webpack-server": "npm run clean:builds && APP_ENV=development webpack-dev-server --config webpack.dev.config.js",
    "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true NODE_NO_WARNINGS=1 electron .",
    "build": "npm run clean && APP_ENV=production webpack --config webpack.config.js",
    "generate:dmg": "electron-installer-dmg builds/QuoteDP-darwin-x64/QuoteDP.app QuoteDP --out=builds",
    "generate:application": "electron-packager ./ QuoteDP --out=builds --icon=assets/icons/icon",
    "package:mac": "npm run generate:application && npm run generate:dmg",
    "package": "npm run clean:builds && npm run build && npm run package:mac"
  },
  "author": "Nick <nick@drawbotics.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@types/webpack-env": "^1.13.6",
    "autobind-decorator": "^2.1.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "better-webpack-progress": "^1.1.0",
    "css-loader": "^1.0.0",
    "electron": "^3.0.4",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^12.2.0",
    "exports-loader": "^0.7.0",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@types/electron-json-storage": "^4.0.0",
    "@types/electron-settings": "^3.1.1",
    "@types/feather-icons": "^4.7.0",
    "@types/lodash": "^4.14.117",
    "@types/query-string": "^6.1.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-sortable-hoc": "^0.6.4",
    "@types/react-transition-group": "^2.0.14",
    "@types/uuid": "^3.4.4",
    "dotenv": "^6.1.0",
    "electron-better-ipc": "^0.1.1",
    "electron-json-storage": "^4.1.4",
    "electron-window-state": "^5.0.2",
    "emotion": "^9.2.12",
    "express": "^4.16.4",
    "fs": "0.0.1-security",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.11",
    "node-vibrant": "^3.0.0",
    "normalize.css": "^8.0.0",
    "query-string": "^6.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-feather": "^1.1.4",
    "react-router-dom": "^4.3.1",
    "react-sortable-hoc": "^0.8.3",
    "react-transition-group": "^2.5.0",
    "uuid": "^3.3.2",
